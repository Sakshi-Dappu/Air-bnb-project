<% layout("layouts/boilerplate.ejs") %>
<h3>All Listings</h3>
<div class="row row-col-lg-3 row-cols-md-3 row-cols-sm-1 index_main_div">
  <% for(let listing of allListings) { %> 
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col ">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %> <br /></b>
        </p>
        <p class="card-text">
          &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
        </p>
      </div>

      
    </div> 
  </a>
  <% } %>
</div>
